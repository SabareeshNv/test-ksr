---
import BaseLayout from "@layouts/BaseLayout.astro";

const title = "Contact Us | KeralaServiceRules.com";
const description = "Fill this form to contact us. | KeralaServiceRules.com";
---

<BaseLayout {title} {description}>
    <main class="wrapper py-6">
        <div
            class="mx-auto grid max-w-screen-xl gap-8 rounded-lg px-8 md:grid-cols-2 md:px-12 lg:px-16 xl:px-32"
        >
            <div class="space-y-2">
                <h2 class="text-4xl font-bold leading-tight lg:text-5xl">
                    Let's talk!
                </h2>
                <div>Fill in the form to get in touch with us.</div>
            </div>

            <form
                class="space-y-6"
                method="POST"
                name="contact"
                data-netlify="true"
                netlify-honeypot="bot-field"
            >
                <div>
                    <label for="name" class="text-sm">Full Name</label>
                    <input
                        id="name"
                        name="name"
                        type="text"
                        placeholder="Your full name please"
                        required
                        class="w-full rounded p-3"
                    />
                </div>
                <div>
                    <label for="email" class="text-sm">Email</label>
                    <input
                        id="email"
                        name="email"
                        type="email"
                        placeholder="you@email.com"
                        class="w-full rounded p-3"
                    />
                </div>
                <div>
                    <label for="phone" class="text-sm">Mobile Number</label>
                    <input
                        id="phone"
                        name="phone"
                        type="tel"
                        maxlength="10"
                        pattern="[0-9]{10}"
                        placeholder="Your mobile number please"
                        title="Only numbers are accepted"
                        class="w-full rounded p-3"
                    />
                </div>
                <div>
                    <label for="message" class="text-sm">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="3"
                        placeholder="Write your message here..."
                        required
                        class="w-full rounded p-3"></textarea>
                </div>
                {
                    /* Netlify Spam Form Bot Detection 
                    https://docs.netlify.com/forms/spam-filters/ */
                }
                <div class="hidden">
                    <label for="netly">You don't need to fill this out.</label>
                    <input name="bot-field" id="netly" name="netly" />
                </div>
                <button
                    type="submit"
                    class="w-full rounded bg-brand p-3 text-sm font-bold uppercase tracking-wide text-white"
                    >Send Message</button
                >
            </form>
        </div>
    </main>
</BaseLayout>
