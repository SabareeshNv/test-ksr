---
import BaseLayout from "@layouts/BaseLayout.astro";
import SearchField from "@components/SearchField.astro";
import TagCloud from "@components/TagCloud.astro";
import UsefulLinks from "@components/UsefulLinks.astro";
import PopularPosts from "@components/PopularPosts.astro";

const ksrDownload = [
    {
        slNo: "1",
        ksrVolume: "Kerala Service Rules Volume 1 - 8th Edition",
        downloadLink: "/ksr/ksr-volume1-8th-edition.pdf",
    },
    {
        slNo: "2",
        ksrVolume: "Kerala Service Rules Volume 2 - 6th Edition",
        downloadLink: "/ksr/ksr-volume2-6th-edition.pdf",
    },
];

const title =
    "Download KSR (Kerala Service Rules) PDF | Kerala Service Rules in Malayalam | KeralaServiceRules.com";
const description =
    "Download Kerala Service Rules (KSR) PDF. | Kerala Service Rules in Malayalam | KeralaServiceRules.com";
---

<BaseLayout {title} {description}>
    <div class="wrapper page-columns my-8">
        <main>
            <h1 class="text-2xl mb-6">
                Download Kerala Service Rules PDFs from below.
            </h1>
            <table class="table-auto">
                <caption class="caption-bottom mt-6 text-lg">
                    <p class="text-left">
                        All the files provided here are not the original work of
                        us and are published by Kerala Finance Department. We
                        provide the respective files as is, for better access to
                        the public and as a helpful resource.
                    </p>
                </caption>
                <thead class="uppercase text-lg">
                    <tr>
                        <th class="p-4 border border-gray-300">Sl No</th>
                        <th class="p-4 border border-gray-300">Book Edition</th>
                        <th class="p-4 border border-gray-300"></th>
                    </tr>
                </thead>
                <tbody class="text-xl">
                    {
                        ksrDownload.map((item) => (
                            <tr>
                                <td class="p-4 border border-gray-300">
                                    {item.slNo}
                                </td>
                                <td class="p-4 border border-gray-300">
                                    {item.ksrVolume}
                                </td>
                                <td class="p-4 border border-gray-300">
                                    <a
                                        href={item.downloadLink}
                                        class="font-bold text-brand"
                                    >
                                        Dowload
                                    </a>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </main>
        <aside>
            <SearchField />
            <UsefulLinks />
            <PopularPosts />
            <TagCloud />
        </aside>
    </div>
</BaseLayout>
