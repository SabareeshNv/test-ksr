---
import { Image } from "astro:assets";
import Date from "./Date.astro";

const { post, aboveFold = false } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article>
  <h2>
    <a href={`/article/${post.id}/`} class="text-2xl font-bold">{title}</a>
  </h2>
  <Date date={pubDate} class="mt-2" />
  <div class="mt-4">
    <a href={`/article/${post.id}/`}>
      {
        aboveFold ? (
          <Image
            src={coverImage}
            alt={coverAlt}
            loading={"eager"}
            fetchpriority={"high"}
            decoding={"sync"}
            class="shadow"
          />
        ) : (
          <Image src={coverImage} alt={coverAlt} class="shadow" />
        )
      }
    </a>
    <div class="font-manjari mt-4 leading-snug [word-spacing:0.2rem]">
      {summary}
    </div>
  </div>
</article>
